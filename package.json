  "dependencies": {
    "ton": "^6.2.1",
    "tslib": "^2.3.1",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/node": "^14.17.32",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  },
  "build": {
    "extraResources": ["./bin/**"]
