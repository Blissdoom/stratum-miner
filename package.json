{
    "private": true,
    "name": "ton-pool-client",
    "version": "1.0.0",
    "author": "Telezhka",
    "license": "ISC",
    "main": "dist/electron/index.js",
    "scripts": {
        "build": "tsc -p tsconfig.prod.json && copyfiles config/* bin/* data/* dist/",
        "build:prod": "npm run clean && npm run build",
        "electron": "wait-on tcp:5000 && cross-env NODE_ENV=development electron .",
        "electron:dev": "npm run build:prod && concurrently -k \"cross-env BROWSER=none vite\" \"npm run electron\"",
        "electron:build": "cross-env NODE_ENV=production tsc -p tsconfig.electron.json && electron-builder -l",
        "app:build": "npm run clean && vue-tsc --noEmit && cross-env ELECTRON=true vite build && npm run electron:build",
        "clean": "rimraf .cache && rimraf coverage && rimraf dist && rimraf dist_electron",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "lint": "eslint --ext .ts .",
        "lint:fix": "eslint --fix --ext .ts .",
        "typecheck": "tsc -p tsconfig.prod.json --noEmit"
    },
    "dependencies": {
        "command-line-args": "^5.2.0",
        "element-plus": "^1.2.0-beta.5",
        "ton": "^6.2.1",
        "tslib": "^2.3.1",
        "vue": "^3.2.24",
        "winston": "^3.3.3",
        "ws": "^8.2.3"
    },
    "devDependencies": {
        "@types/bn.js": "^5.1.0",
        "@types/command-line-args": "^5.2.0",
        "@types/node": "^14.17.32",
        "@types/ws": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "^5.2.0",
        "@typescript-eslint/parser": "^5.2.0",
        "@vitejs/plugin-vue": "^1.10.2",
        "@vue/compiler-sfc": "^3.2.24",
        "concurrently": "^6.4.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "electron": "^16.0.4",
        "electron-builder": "^22.14.5",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.4.4",
        "unplugin-element-plus": "^0.1.3",
        "vite": "^2.7.1",
        "vite-tsconfig-paths": "^3.3.17",
        "vue-tsc": "^0.29.8",
        "wait-on": "^6.0.0"
    },
    "build": {
        "appId": "com.toncoinpool.stratum-miner",
        "productName": "TON Coin Pool",
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        },
        "extraResources": [
            "bin/**",
            "data/**",
            "config/config.json"
        ]
    }
}
